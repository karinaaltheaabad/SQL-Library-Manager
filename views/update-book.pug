extends layout 

block content
    h1= title
    if (errors)
        h2(class="error") Oooops, an error occurred! 
            each error in errors
                ul(class="error")
                    li= error.message
    form(method="post" action='/books/' + book.id)
        p 
            label Title
            input(name="title" type="text" id="title" value= book.title)
        p
            label Author 
            input(input name="author" type="text" id="author" value= book.author)
        p
            label Genre 
            input(input name="genre" type="text" id="genre" value= book.genre)
        p
            label Year 
            input(input name="year" type="text" id="year" value= book.year)
        p
            input(type="submit" value="Update Book")
    form(method="post" action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?')")
        p
            a.button(href='/') Cancel 
        p
            input(type="submit" value="Delete Book")
        